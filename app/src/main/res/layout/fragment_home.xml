<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.LoginFragment"
    android:background="@drawable/img">


    <Button
        android:id="@+id/fav_btn"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@drawable/arrondir"
        android:text="recycle"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.276" />

    <Button
        android:id="@+id/retro_btn"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@drawable/arrondir"
        android:text="retrofit"
        app:layout_constraintBottom_toBottomOf="@id/notif_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:textSize="20dp"

        app:layout_constraintStart_toStartOf="@id/notif_btn"
        app:layout_constraintTop_toBottomOf="@+id/fav_btn"
        app:layout_constraintVertical_bias="0.375" />

    <Button
        android:id="@+id/notif_btn"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginBottom="292dp"
        android:background="@drawable/arrondir"
        android:text="notif"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/fav_btn"
        app:layout_constraintTop_toBottomOf="@+id/fav_btn"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/down_btn"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="72dp"
        android:layout_marginBottom="152dp"
        android:background="@drawable/arrondir"
        android:text="Download"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/notif_btn"
        app:layout_constraintVertical_bias="0.073" />


</androidx.constraintlayout.widget.ConstraintLayout>